    <style>
        :root {
            --primary: mediumpurple;
            --primary-glow: rgba(147, 112, 219, 0.5);
            --bg-dark: #0a0a0f;
            --glass-bg: rgba(30, 30, 40, 0.15); 
            --glass-border: rgba(255, 255, 255, 0.08);
            --text-main: #ffffff;
            --text-sub: #b0b0b0;
            --error: #ff5555;
            --error-glow: rgba(255, 85, 85, 0.5);
        }

        body {
            cursor: default;
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-dark);
            background: radial-gradient(circle at center, #1a1025 0%, #000000 100%);
            color: var(--text-main);
            margin: 0;
            height: 100vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            user-select: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
        }

        * {
            box-sizing: border-box;
        }

        #cursor-glow {
            position: fixed;
            width: 120px; 
            height: 120px;
            background: radial-gradient(circle, rgba(147, 112, 219, 0.25) 0%, rgba(0,0,0,0) 70%);
            border-radius: 50%;
            pointer-events: none;
            margin-left: -60px; 
            margin-top: -60px;
            top: 0;
            left: 0;
            z-index: 5; 
            mix-blend-mode: screen;
            will-change: transform;
            transform: translate3d(-500px, -500px, 0); 
        }

        #fireworks-canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            pointer-events: none;
        }

        .ui-wrapper {
            z-index: 10;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            max-width: 1600px; 
            padding: 20px;
            height: 100%;
            overflow-y: auto;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

        .ui-wrapper::-webkit-scrollbar {
            display: none;
        }

        .title-container {
            text-align: center;
            margin-top: 40px;
            margin-bottom: 30px;
            text-shadow: 0 0 20px var(--primary-glow);
        }

        #main-title-text, #main-title-text-home, #main-title-text-login {
            font-size: 4rem;
            font-weight: 700;
            letter-spacing: -1px;
            background: linear-gradient(135deg, #fff 0%, var(--primary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: block;
        }

        .subtext-title {
            font-size: 1rem;
            color: var(--text-sub);
            margin-top: 5px;
            font-weight: 300;
            letter-spacing: 0.5px;
        }

        .container {
            background: var(--glass-bg);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border: 1px solid var(--glass-border);
            padding: 30px;
            border-radius: 24px;
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
            margin-bottom: 20px;
            width: 100%;
        }

        input[type="text"], input[type="password"] {
            background: rgba(10, 10, 15, 0.6);
            border: 1px solid var(--glass-border);
            color: var(--text-main);
            padding: 12px 16px;
            border-radius: 12px;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            width: 100%;
            margin-bottom: 15px;
            outline: none;
            transition: all 0.3s ease;
            text-align: center;
        }

        input[type="text"]:focus, input[type="password"]:focus {
            border-color: var(--primary);
            box-shadow: 0 0 15px var(--primary-glow);
            background: rgba(20, 20, 30, 0.8);
        }

        input::placeholder {
            color: var(--primary);
            font-size: 1.1rem;
            opacity: 1;
            font-weight: 600;
        }

        .login-error-msg {
            color: var(--error);
            font-size: 0.9rem;
            margin-top: -5px;
            margin-bottom: 10px;
            display: none;
            text-shadow: 0 0 10px var(--error-glow);
        }

        button {
            background: rgba(147, 112, 219, 0.25); 
            color: white;
            border: 1px solid rgba(147, 112, 219, 0.5);
            padding: 12px 24px;
            border-radius: 12px;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            flex-grow: 1;
            max-width: 300px;
            z-index: 11;
            will-change: transform; 
        }

        button:hover {
            background: rgba(147, 112, 219, 0.8);
            box-shadow: 0 0 30px var(--primary-glow);
            transform: translateY(-3px);
            color: #fff;
            border-color: var(--primary);
        }

        button:active {
            transform: scale(0.98);
        }

        button.disabled {
            opacity: 0.5;
            cursor: not-allowed;
            filter: grayscale(1);
        }

        .plus-only {
            display: none;
        }

        .footer {
            margin-top: auto;
            padding: 20px;
            font-size: 0.8rem;
            color: rgba(255, 255, 255, 0.4);
            text-align: center;
            min-height: 1.2rem; 
        }

        #notification-container {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .notify-container {
            background: var(--glass-bg);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border: 1px solid var(--glass-border);
            padding: 20px 30px;
            border-radius: 16px;
            width: fit-content; 
            max-width: 90%;
            min-width: 300px;
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
            text-align: center;
            color: var(--text-main);
        }

        .notify-heading {
            color: var(--primary);
            font-weight: 700;
            font-size: 1.2rem;
            margin-bottom: 5px; 
            text-transform: uppercase;
            letter-spacing: 1px;
            text-shadow: 0 0 10px rgba(147, 112, 219, 0.3);
        }

        .notify-content {
            line-height: 1.25; 
            font-size: 0.95rem;
            margin-top: 5px;
        }

        #game-frame {
            display: none;
            width: 100%;
            height: 100%;
            border: none;
            position: fixed;
            top: 0;
            left: 0;
            background-color: black;
            z-index: 9999;
        }

        .progress-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(10, 10, 15, 0.95);
            backdrop-filter: blur(5px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 10000;
            display: none;
        }

        .progress-container {
            width: 200px;
            height: 6px;
            background-color: #333;
            border-radius: 10px;
            overflow: hidden;
            position: relative;
            box-shadow: 0 0 20px var(--primary-glow);
        }

        .progress-bar {
            background-color: var(--primary);
            height: 100%;
            width: 70px;
            border-radius: 99px;
            box-shadow: 0 0 10px var(--primary);
            animation: moveProgressBar 1.5s infinite ease-in-out;
            will-change: transform;
        }

        .loading-text {
            margin-top: 15px;
            color: var(--primary);
            font-weight: 600;
            letter-spacing: 2px;
            will-change: opacity;
        }

        .status-message {
            font-size: 1.3rem; 
