    <script>
        const canvas = document.getElementById('fireworks-canvas');
        const ctx = canvas.getContext('2d');
        const cursorGlow = document.getElementById('cursor-glow');
        
        let mouseX = -100;
        let mouseY = -100;
        let mouseMoved = false;

        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
            mouseMoved = true;
        });

        let width, height;
        let particles = [];
        let fireworks = [];
        let animationId; 
        let timerTotal = 80;
        let timerTick = 0;

        const PI2 = Math.PI * 2;
        const NEG_PI_DIV_2 = -Math.PI / 2;

        ctx.lineCap = 'round';
        ctx.lineWidth = 2;

        function resize() {
            width = canvas.width = window.innerWidth;
            height = canvas.height = window.innerHeight;
            ctx.lineCap = 'round';
            ctx.lineWidth = 2;
        }
        window.addEventListener('resize', resize);
        resize();

        function random(min, max) { return Math.random() * (max - min) + min; }

        class Firework {
            constructor() {
                this.x = random(width * 0.1, width * 0.9);
                this.y = height;
                this.coordinateCount = 3;
                this.coordinates = new Array(this.coordinateCount);
                for(let i=0; i<this.coordinateCount; i++) {
                    this.coordinates[i] = [this.x, this.y];
                }
                
                const targetY = random(height * 0.1, height * 0.4);
                const distance = height - targetY;
                const gravity = 0.05; 
                const speed = Math.sqrt(2 * gravity * distance);
                const angle = NEG_PI_DIV_2 + random(-0.35, 0.35);
                this.vx = Math.cos(angle) * speed;
                this.vy = Math.sin(angle) * speed;
                this.gravity = gravity;
                this.hue = random(0, 360); 
                this.brightness = random(50, 80);
                this.stringColor = `hsl(${this.hue}, 100%, ${this.brightness}%)`;
            }
            update() {
                let p = this.coordinates.pop();
                if (!p) p = [0,0];
                p[0] = this.x;
                p[1] = this.y;
                this.coordinates.unshift(p);

                this.vy += this.gravity; 
                this.x += this.vx;
                this.y += this.vy;
                
                if (this.vy >= -0.5) {
                    this.explode();
                    return false;
                }
                return true;
            }
            draw() {
                ctx.beginPath();
                ctx.moveTo(this.coordinates[this.coordinates.length - 1][0], this.coordinates[this.coordinates.length - 1][1]);
                ctx.lineTo(this.x, this.y);
                ctx.strokeStyle = this.stringColor;
                ctx.stroke();
            }
            explode() {
                const count = random(40, 70);
                for (let i = 0; i < count; i++) {
                    particles.push(new Particle(this.x, this.y, this.hue));
                }
            }
        }

        class Particle {
            constructor(x, y, hue) {
                this.x = x;
                this.y = y;
                this.coordinateCount = 5;
                this.coordinates = new Array(this.coordinateCount);
                for(let i=0; i<this.coordinateCount; i++) {
                    this.coordinates[i] = [this.x, this.y];
                }
                
                const angle = random(0, PI2);
                const speed = random(1, 8); 
                this.vx = Math.cos(angle) * speed;
                this.vy = Math.sin(angle) * speed;
                this.friction = 0.95; 
                this.gravity = 0.08; 
                this.hue = hue + random(-20, 20); 
                this.brightness = random(50, 80);
                this.alpha = 1;
                this.decay = random(0.015, 0.03);
            }
            update() {
                let p = this.coordinates.pop();
                if (!p) p = [0,0];
                p[0] = this.x;
                p[1] = this.y;
                this.coordinates.unshift(p);

                this.vx *= this.friction;
                this.vy *= this.friction;
                this.vy += this.gravity;
                this.x += this.vx;
                this.y += this.vy;
                this.alpha -= this.decay;

                if (this.alpha <= this.decay) return false;
                if (this.y > height + 50) return false; 
                if (this.x < -50 || this.x > width + 50) return false; 

                return true;
            }
            draw() {
                ctx.beginPath();
                ctx.moveTo(this.coordinates[this.coordinates.length - 1][0], this.coordinates[this.coordinates.length - 1][1]);
                ctx.lineTo(this.x, this.y);
                ctx.strokeStyle = `hsla(${this.hue}, 100%, ${this.brightness}%, ${this.alpha})`;
                ctx.stroke();
            }
        }

        function loop() {
            ctx.clearRect(0, 0, width, height);
            
            timerTick++;
            if (timerTick >= timerTotal) {
                fireworks.push(new Firework());
                timerTick = 0;
                timerTotal = random(20, 70); 
            }
            if (Math.random() < 0.005) {
                 fireworks.push(new Firework());
            }

            let i = fireworks.length;
            while(i--) {
                fireworks[i].draw();
                if (!fireworks[i].update()) {
                    fireworks[i] = fireworks[fireworks.length - 1];
                    fireworks.pop();
                }
            }

            let j = particles.length;
            while(j--) {
                particles[j].draw();
                if (!particles[j].update()) {
                    particles[j] = particles[particles.length - 1];
                    particles.pop();
                }
            }
            
            if (mouseMoved && cursorGlow) {
                cursorGlow.style.transform = `translate3d(${mouseX}px, ${mouseY}px, 0)`;
                mouseMoved = false;
            }

            animationId = requestAnimationFrame(loop);
        }

        function startAnimation() { if (!animationId) loop(); }
        function stopAnimation() {
            if (animationId) {
                cancelAnimationFrame(animationId);
                animationId = null;
            }
        }
        startAnimation();
    </script>

    <script>
        const CURRENT_VERSION = "0.2.1_nutrient";
        const isPlusMode = true;

        function clearGameFrame() {
            const iframe = document.getElementById("game-frame");
            if(iframe) {
                iframe.srcdoc = '';
                iframe.src = ''; 
                iframe.style.display = 'none';
            }
        }
        window.onbeforeunload = clearGameFrame;

        document.addEventListener("DOMContentLoaded", function() {
            clearGameFrame();

            const updateScreen = document.getElementById('update-screen');
            const homeScreen = document.getElementById('home-screen');
            const loginScreen = document.getElementById('login-screen');
            const statusContent = document.getElementById('status-content');
            const footer = document.getElementById("footer");
            const loginFooter = document.getElementById("login-footer");

            const appName = isPlusMode ? "Fireworks+" : "Fireworks";

            const delayDuration = Math.floor(Math.random() * (6000 - 2000 + 1)) + 2000;
            const delayPromise = new Promise(resolve => setTimeout(resolve, delayDuration));

            const fetchPromise = fetch('https://raw.githubusercontent.com/purple-fireworks/data/refs/heads/main/version.txt?' + new Date().getTime(), { cache: 'no-cache' });

            Promise.all([fetchPromise.catch(err => err), delayPromise])
                .then(([response, _]) => {
                    if (response instanceof Error) {
                        throw response;
                    }
                    if (!response.ok) {
                        throw new Error("Network response was not ok");
                    }
                    return response.text();
                })
                .then(text => {
                    const allowedVersions = text.split(',').map(v => v.trim());
                    
                    if (allowedVersions.includes(CURRENT_VERSION)) {
                        updateScreen.style.display = 'none';
                        
                        if (isPlusMode) {
                            loginScreen.style.display = 'flex';
                            loginFooter.textContent = CURRENT_VERSION;
                            const loginTitle = document.getElementById('main-title-text-login');
                            if(loginTitle) loginTitle.textContent = "Fireworks+";
                        } else {
                            showHomeScreen();
                        }
                    } else {
                        showErrorState("Update Required", `<span>This version of ${appName} is no longer supported.</span><span>Please update to the latest version and try again.</span>`);
                    }
                })
                .catch(error => {
                    console.error("Version Check Error:", error);
                    showErrorState("Connection Failed", "<span>We couldn't connect to the server.</span><span>Check your internet connection and try again.</span>");
                });

            function showHomeScreen() {
                homeScreen.style.display = 'flex';
                footer.textContent = CURRENT_VERSION;
                loadNotifications();
            }

            function showErrorState(title, message) {
                statusContent.innerHTML = `
                    <div class="status-message" style="color: var(--error); text-shadow: 0 0 15px var(--error-glow); margin-bottom: 15px;">${title}</div>
                    <div class="status-detail">${message}</div>
                    <button onclick="location.reload()" style="max-width: 200px; margin-top: 25px;">Retry</button>
                `;
            }

            function loadNotifications() {
                fetch('https://raw.githubusercontent.com/purple-fireworks/data/refs/heads/main/notify.txt?' + new Date().getTime(), { cache: 'no-cache' })
                .then(response => response.text())
                .then(notificationText => {
                    const notificationContainer = document.getElementById("notification-container");
                    if (notificationText.trim()) {
                        const notificationDiv = document.createElement("div");
                        notificationDiv.classList.add("notify-container");
                        
                        const lines = notificationText.split('\n');
                        const heading = lines[0];
                        let contentRaw = lines.slice(1).join('\n');
                        let contentFormatted = contentRaw
                            .replace(/\\n/g, '\n') 
                            .replace(/\n+/g, '<br>'); 
                        
                        const headingElement = document.createElement("div");
                        headingElement.classList.add("notify-heading");
                        headingElement.textContent = heading;
                        notificationDiv.appendChild(headingElement);
                        
                        if (contentFormatted.trim()) {
                            const contentElement = document.createElement("div");
                            contentElement.classList.add("notify-content");
                            contentElement.innerHTML = contentFormatted;
                            notificationDiv.appendChild(contentElement);
                        }
                        notificationContainer.appendChild(notificationDiv);
                    }
                });
            }

            if (isPlusMode) {
                document.title = "Fireworks+";
                const homeTitle = document.getElementById('main-title-text-home');
                if(homeTitle) homeTitle.textContent = "Fireworks+";
                const updateTitle = document.getElementById('main-title-text');
                if(updateTitle) updateTitle.textContent = "Fireworks+";
                const plusOnlyElements = document.querySelectorAll('.plus-only');
                plusOnlyElements.forEach(el => {
                    el.style.display = 'inline-block'; 
                });
            }

            window.attemptLogin = function() {
                const userIn = document.getElementById('username-input').value.trim();
                const passIn = document.getElementById('password-input').value.trim();
                const btn = document.getElementById('login-btn');
                const errorMsg = document.getElementById('login-error');

                if(!userIn || !passIn) return;

                btn.classList.add('disabled');
                btn.textContent = "Checking...";
                errorMsg.style.display = 'none';

                fetch('https://raw.githubusercontent.com/purple-fireworks/data/refs/heads/main/login.txt?' + new Date().getTime(), { cache: 'no-cache' })
                .then(response => {
                    if (!response.ok) throw new Error("Login server error");
                    return response.text();
                })
                .then(text => {
                    const lines = text.split('\n');
                    let authenticated = false;

                    for (let line of lines) {
                        const parts = line.trim().split(',');
                        if (parts.length >= 2) {
                            if (parts[0] === userIn && parts[1] === passIn) {
                                authenticated = true;
                                break;
                            }
                        }
                    }

                    if (authenticated) {
                        document.getElementById('login-screen').style.display = 'none';
                        showHomeScreen();
                    } else {
                        btn.classList.remove('disabled');
                        btn.textContent = "Login";
                        errorMsg.style.display = 'block';
                    }
                })
                .catch(err => {
                    console.error(err);
                    btn.classList.remove('disabled');
                    btn.textContent = "Login";
                    alert("Connection error checking credentials.");
                });
            };

            window.showEaglercraftButtons = function() {
                document.getElementById('button-container').style.display = 'none';
                const eaglerContainer = document.getElementById('eaglercraft-button-container');
                eaglerContainer.style.display = 'flex';
            };

            window.showMainMenu = function() {
                document.getElementById('eaglercraft-button-container').style.display = 'none';
                const mainContainer = document.getElementById('button-container');
                mainContainer.style.display = 'flex';
            };

            const buttons = document.querySelectorAll('button'); 

            function disableButtons() {
                buttons.forEach(button => {
                    button.classList.add('disabled');
                    button.disabled = true;
                });
            }

            function enableButtons() {
                buttons.forEach(button => {
                    button.classList.remove('disabled');
                    button.disabled = false;
                });
            }

            function openRawHtml(url) {
                const iframe = document.getElementById("game-frame");
                const progressOverlay = document.getElementById('progress-overlay');
                stopAnimation();
                disableButtons();
                progressOverlay.style.display = 'flex';
                fetch(url)
                    .then(response => response.text())
                    .then(html => {
                        iframe.srcdoc = html;
                        iframe.style.display = "block";
                        iframe.onload = function() {
                            progressOverlay.style.display = 'none';
                            enableButtons();
                            iframe.onload = null;
                        };
                    })
                    .catch(error => {
                        console.error('Error fetching raw HTML:', error);
                        progressOverlay.style.display = 'none';
                        enableButtons();
                        startAnimation();
                        alert('Could not load content. Please try again.');
                    });
            }
            window.openRawHtml = openRawHtml;
        });
    </script>
