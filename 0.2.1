        }
        .status-detail {
            color: var(--text-sub);
            font-size: 0.9rem;
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        @keyframes moveProgressBar {
            0% { transform: translateX(-80px); }
            100% { transform: translateX(210px); }
        }
